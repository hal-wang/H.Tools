<UserControl
    x:Class="H.Tools.Wpf.Controls.PathIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:H.Tools.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="uc"
    mc:Ignorable="d">

    <Viewbox Width="{Binding ElementName=uc, Path=IconSize, Mode=OneWay}" Height="{Binding RelativeSource={RelativeSource AncestorType=local:PathIcon}, Path=IconSize, Mode=OneWay}">
        <Path Data="{Binding ElementName=uc, Path=Icon, Mode=OneWay}" Fill="{Binding RelativeSource={RelativeSource AncestorType=local:PathIcon}, Path=Foreground, Mode=OneWay}" />
    </Viewbox>
</UserControl>
