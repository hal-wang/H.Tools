<Button
    x:Class="H.Tools.Wpf.Controls.IconButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:H.Tools.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="btn"
    HorizontalContentAlignment="Center"
    VerticalContentAlignment="Center"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <local:PathIcon Icon="{Binding ElementName=btn, Path=Icon, Mode=OneWay}" IconSize="{Binding ElementName=btn, Path=IconSize, Mode=OneWay}" />
</Button>
